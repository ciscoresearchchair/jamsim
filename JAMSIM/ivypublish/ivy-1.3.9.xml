<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0">

	<info organisation="org.jamsim" module="jamsim" revision="1.3.9" status="release" publication="20120306113408">
		<license name="LGPL" url="http://www.gnu.org/licenses/lgpl.html"/>
		<description homepage="http://code.google.com/p/jamsim/">
		</description>
	</info>

	<configurations>
		<conf name="default" visibility="public" description="binary artifacts of this module and its dependencies"/>
		<conf name="sources" visibility="public" description="source artifacts of this module and its dependencies"/>
		<conf name="javadoc" visibility="public" description="javadoc artifacts of this module and its dependencies"/>
	</configurations>

	<publications>
		<artifact conf="default"/>
		<artifact name="jamsim-sources" type="source" conf="sources" ext="jar"/>
		<artifact name="jamsim-javadoc" type="javadoc" conf="javadoc" ext="jar"/>
		<artifact type="pom" ext="pom" conf="default"/>
	</publications>

	<dependencies>
		<dependency org="org.ascape" name="ascape" rev="5.6.1" conf="default"/>

		<dependency org="net.casper" name="casperdatasets-ext" rev="2.1.5" revConstraint="latest.integration" conf="*->@"/>

		<dependency org="org.omancode" name="romanface" rev="1.1.6" revConstraint="latest.integration" conf="*->@"/>
		<dependency org="org.omancode" name="omcutil" rev="1.2.5" revConstraint="[1.2.4,)" conf="*->@"/>
        <dependency org="org.rosuda" name="javaGD" rev="0.5.3" revConstraint="latest.integration"/>
       
        <dependency org="org.javabuilders" name="javabuilder-swing" rev="1.1-RC4"/>
        <!-- slf4j needed for javabuilders -->
        <dependency org="org.slf4j" name="slf4j-log4j12" rev="1.6.4" revConstraint="latest.integration"/>
        
        <dependency org="colt" name="colt" rev="1.2.0" revConstraint="latest.integration">
	        <exclude name="concurrent"/>
        </dependency>
        
        <dependency org="org.jedit" name="jedit-textArea" rev="4.3.2" revConstraint="latest.integration"/>
        
        <!-- exclude dependencies artifacts based on configuration -->
		<exclude type="source" ext="*" conf="default,javadoc"/>
		<exclude type="javadoc" ext="*" conf="default,sources"/>
		<exclude type="jar" ext="*" conf="sources,javadoc"/>
        
    </dependencies>
</ivy-module>
